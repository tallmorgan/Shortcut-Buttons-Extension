{
  "manifest_version": 3,
  "name": "Shortcut Buttons",
  "version": "1.0",
  "description": "Adds buttons to Shortcut",
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "css": ["css/content.css"],
      "matches": ["https://app.shortcut.com/*"]
    }
  ],
  "icons": {
    "16": "icons/ShortcutIcon16.png",
    "32": "icons/ShortcutIcon32.png",
    "48": "icons/ShortcutIcon48.png",
    "128": "icons/ShortcutIcon128.png"
  }
}
